extends ../templates/default
block head
	title Dhyana & Avi

block content
	// BEGIN PAGE CONTAINER
	.content
		// first layer
		#firstLayer.layer.adjustHeight
			.helloWorld
				ul.helloFromUs
					li
						img(src='images/lily-head.png')
					li
						img(src='images/avi-head.png')
				p.helloMsg.proxima We dance, sing, and do silly things
					br
					| We eat, drink, and be married
			.bottom-arrow
				img(src='images/bottom-arrow.png')


		#secondLayer.layer
			.titleContainer
				include ../svgs/topline
				include ../svgs/title
				include ../svgs/bottomline
				include ../svgs/bottomdecor

		// third layer
		#thirdLayer.layer
			.container
				.row#contentAnimation
					.col-md-4.col-md-push-4.text-center
						#weddingScene
							img(src='images/avi-and-lily.png')

		// third layer
		#fourthLayer.layer
			.container
				.row#contentAnimation
					.col-xs-12.col-sm-8.col-sm-push-2
						.row
							.col-xs-6.text-center.contentLeft
								img.img-responsive(src='images/we-dance.png')
								br
								img.img-responsive(src='images/content-left-content-01.png')
								br
								img.img-responsive(src='images/content-left-content-02.png')
								br
								img.img-responsive(src='images/content-left-content-03.png')
							.col-xs-6.text-center.contentRight
								img.img-responsive(src='images/we-eat.png')
								br
								img.img-responsive(src='images/content-right-content-01.png')
								br
								img.img-responsive(src='images/content-right-content-02.png')
								br
								img.img-responsive(src='images/content-right-content-03.png')

		// fourth layer
		#fifthLayer.layer.adjustHeight
			.container
				.row.m-t-20#placeAnimation
					.col-sm-10.col-sm-push-1.text-center
						h5.text-uppercase.proxima SACRED MATRIMONY
						br
						| Saturday, June 6, 2015. 13:00-15:00 WIB
						h3.proxima.no-margin-top.no-margin-bottom.text-light St. Albertus Church
						p.proxima JL. Boulevard, Kota Mandiri Harapan Indah Kavling 23, Bekasi, Jawa Barat.
						br
						img(src='images/general-divider.png')
